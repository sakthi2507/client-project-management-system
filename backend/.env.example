# Backend Environment Variables (Copy to .env for local development)

# Database URL
# For development: sqlite:///./database.db
# For production (Render): postgresql://user:password@hostname/dbname
DATABASE_URL=sqlite:///./database.db

# Frontend URL (for CORS)
# Development: http://localhost:5173
# Production: https://your-vercel-deployment.vercel.app
FRONTEND_URL=http://localhost:5173

# JWT Secret (use a strong random string in production)
SECRET_KEY= os.getenv("SECRET_KEY", "dev-secret-key")
